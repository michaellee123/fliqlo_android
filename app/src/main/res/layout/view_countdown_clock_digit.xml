<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alignedtextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/backUpper"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/background_top">

            <dog.abcd.fliqlo.AlignedTextView
                android:id="@+id/backUpperText"
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-1dp"
                android:background="#00000000"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="8"
                android:textColor="@color/text_color"
                alignedtextview:alignment="2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/backLower"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/background_bottom">

            <dog.abcd.fliqlo.AlignedTextView
                android:id="@+id/backLowerText"
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-1dp"
                android:background="#00000000"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="8"
                android:textColor="@color/text_color"
                alignedtextview:alignment="1" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frontUpper"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/background_top">

            <dog.abcd.fliqlo.AlignedTextView
                android:id="@+id/frontUpperText"
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-1dp"
                android:background="#00000000"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="8"
                android:textColor="@color/text_color"
                alignedtextview:alignment="2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frontLower"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/background_bottom">

            <dog.abcd.fliqlo.AlignedTextView
                android:id="@+id/frontLowerText"
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-1dp"
                android:background="#00000000"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="8"
                android:textColor="@color/text_color"
                alignedtextview:alignment="1" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
